{{>components/header}}

{{>components/navbar/index}}

<section class="hero is-info">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">Radio stations by genre "{{genre.title}}"</h1>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        {{#radioStations}}
            {{#content}}
                <a href="/radio-stations/{{seoTitle}}/{{id}}">
                    <div class="box" style="margin-bottom: 10px">
                        <article class="media">
                            <div class="media-content">
                                <div class="content">
                                    <strong>{{title}}</strong>{{#website}} - {{.}}{{/website}}
                                    {{#hasGenres}}
                                        <i> -
                                            {{#genres}}{{title}} {{/genres}}
                                        </i>
                                    {{/hasGenres}}
                                </div>
                            </div>
                        </article>
                    </div>
                </a>
            {{/content}}
            {{^content}}
                <p class="has-text-centered">No radio stations found with genre "{{genre.title}}"</p>
            {{/content}}

            {{#metadata.navigationPossible}}
                <nav class="pagination is-rounded" role="navigation" aria-label="pagination" style="padding-top: 20px">
                    {{#metadata.hasPrevious}}
                        <a href="/radio-stations/by-genre/{{song.seoTitle}}/{{song.id}}?page={{metadata.previousPage}}
                        "
                        class="pagination-previous">Previous</a>
                    {{/metadata.hasPrevious}}
                    {{^metadata.hasPrevious}}
                        <a class="pagination-previous" disabled>Previous</a>
                    {{/metadata.hasPrevious}}

                    {{#metadata.hasNext}}
                        <a href="/radio-stations/by-genre/{{song.seoTitle}}/{{song.id}}?page={{metadata.nextPage}}
                        "
                        class="pagination-next">Next page</a>
                    {{/metadata.hasNext}}
                    {{^metadata.hasNext}}
                        <a class="pagination-next" disabled>Next page</a>
                    {{/metadata.hasNext}}
                </nav>
            {{/metadata.navigationPossible}}
        {{/radioStations}}
    </div>
</section>

{{>components/footer}}

{{>components/header}}

{{>components/navbar/index}}

<section class="hero is-info">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">Found geres by title "{{query}}"</h1>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        {{>search/menu}}
        {{#foundGenres}}
            {{#content}}
                <a href="/radio-stations/by-genre/{{seoTitle}}/{{id}}">
                    <div class="box" style="margin-bottom: 10px">
                        <article class="media">
                            <div class="media-content">
                                <div class="content">
                                    <strong>{{title}}</strong>
                                </div>
                            </div>
                        </article>
                    </div>
                </a>
            {{/content}}
            {{^content}}
                <p class="has-text-centered">No results found for genre with title "{{query}}"</p>
            {{/content}}

            {{#metadata.navigationPossible}}
                <nav class="pagination is-rounded" role="navigation" aria-label="pagination" style="padding-top: 20px">
                    {{#metadata.hasPrevious}}
                        <a href="/search/by-genre/{{seoQuery}}?page={{metadata.previousPage}}"
                        class="pagination-previous">Previous</a>
                    {{/metadata.hasPrevious}}
                    {{^metadata.hasPrevious}}
                        <a class="pagination-previous" disabled>Previous</a>
                    {{/metadata.hasPrevious}}

                    {{#metadata.hasNext}}
                        <a href="/search/by-genre/{{seoQuery}}?page={{metadata.nextPage}}"
                        class="pagination-next">Next page</a>
                    {{/metadata.hasNext}}
                    {{^metadata.hasNext}}
                        <a class="pagination-next" disabled>Next page</a>
                    {{/metadata.hasNext}}
                </nav>
            {{/metadata.navigationPossible}}
        {{/foundGenres}}
    </div>
</section>

{{>components/footer}}
